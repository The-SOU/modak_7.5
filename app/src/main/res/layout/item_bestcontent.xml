<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_bestcontent_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="난 아이스크림이 좋아요"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_bestcontent_tv_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진짜 너무 맛있다. 어떡하니 이걸!!"
        android:textColor="@color/grey"
        android:textSize="25sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/spoqahansansneo_regular"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_bestcontent_tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021.2.12 4:23"
                android:textColor="@color/whitegrey"
                android:textSize="20sp"
                android:fontFamily="@font/spoqahansansneo_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅣ"
                android:textColor="@color/whitegrey"
                android:textSize="20sp"
                android:fontFamily="@font/spoqahansansneo_regular"/>

            <TextView
                android:id="@+id/item_bestcontent_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="익명"
                android:textColor="@color/whitegrey"
                android:textSize="20sp"
                android:fontFamily="@font/spoqahansansneo_regular"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_favorite" />

                <TextView
                    android:id="@+id/item_bestcontent_tv_favoritecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/spoqahansansneo_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/item_bestcontent_tv_commentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/spoqahansansneo_regular"/>

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>




</LinearLayout>