<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_repeatboard_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_repeatboard_tv_boardname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자유게시판"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/item_repeatboard_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/item_boardcontent_layout"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_n"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_boardcontent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_repeatboard_layout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/item_repeatboard_tv_boardcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나는 잘 지내고 있다. 너도 잘 지내니?"
            android:textColor="@color/whitegrey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
</RelativeLayout>